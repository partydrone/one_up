<%= form_for @event do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.label :started_at %>
  <%= form.datetime_field :started_at, pattern: '[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}', placeholder: 'yyyy-mm-ddThh:mm' %>
  <%= form.label :ended_at %>
  <%= form.datetime_field :ended_at, pattern: '[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}', placeholder: 'yyyy-mm-ddThh:mm' %>
  <%= form.label :extra_life_team_id %>
  <%= form.text_field :extra_life_team_id %>
  <%= form.label :twitch_stream_url %>
  <%= form.text_field :twitch_stream_url %>
  <%= form.submit %>
<% end %>

<hr>

<%= link_to @event, method: :delete, data: { confirm: %(Are you sure you want to delete this event? This is a permanent action and cannot be undone.) } do %>
<i class="far fa-trash"></i>
Delete
<% end unless current_page?(action: :new) %>
