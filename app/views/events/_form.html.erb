<%= form_for @event do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <div class="grid-x grid-margin-x">
    <div class="cell medium-6">
      <%= form.label :started_at %>
      <%= form.datetime_field :started_at, pattern: '[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}', placeholder: 'yyyy-mm-ddThh:mm' %>
    </div>
    <div class="cell medium-6">
      <%= form.label :ended_at %>
      <%= form.datetime_field :ended_at, pattern: '[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}', placeholder: 'yyyy-mm-ddThh:mm' %>
    </div>
  </div>
  <%= form.label :location %>
  <%= form.text_field :location %>
  <%= form.label :description %>
  <%= form.text_field :description %>
  <%= form.label :extra_life_team_id %>
  <%= form.text_field :extra_life_team_id %>
  <%= form.label :twitch_stream_url %>
  <%= form.text_field :twitch_stream_url %>
  <%= form.button class: 'button' %>
<% end %>

<%= content_tag :div, class: 'alert callout' do %>
  <h5>Danger Zone</h5>
  <p>
    Deleting this event will destroy all information associated with it,
    including activities and member registrations. If you do this, your data
    cannot be recovered. Don't worry if you click the button by accident&mdash;we'll
    confirm this with you, again, before actually going through with it.
  </p>
  <%= button_to @event, class: 'alert button', method: :delete, data: { confirm: %(Are you sure you want to delete this event? This is a permanent action and cannot be undone.) } do %>
    <i class="far fa-trash"></i>
    Delete
  <% end %>
<% end unless current_page?(action: :new) %>
